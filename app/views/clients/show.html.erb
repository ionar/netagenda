<% @page_title = @client.name %>

<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Whatsapp:</strong>
  <%= @client.whatsapp %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @client.phone %>
</p>

<p>
  <strong>Address:</strong>
  <%= @client.address %>
</p>

<p>
  <strong>Cep:</strong>
  <%= @client.cep %>
</p>

<p>
  <strong>City:</strong>
  <%= @client.city %>
</p>

<p>
  <strong>Province:</strong>
  <%= @client.province %>
</p>

<p>
  <strong>Birth date:</strong>
  <%= @client.birth_date.strftime("%d/%m/%Y") if @client.birth_date %>
</p>

<p>
  <strong>Cpf:</strong>
  <%= @client.cpf %>
</p>

<p>
  <strong>Rg:</strong>
  <%= @client.rg %>
</p>

<p>
  <strong>Email:</strong>
  <%= @client.email %>
</p>

<p>
  <strong>Occupation:</strong>
  <%= @client.occupation %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @client.notes %>
</p>

<div class="fixed-action-btn">
  <%= link_to edit_client_path(@client), class: "btn-floating btn-large waves-effect waves-light teal darken-1" do %>
    <i class="material-icons">create</i>
  <% end %>
  <%= link_to @client, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn-floating btn-large waves-effect waves-light red" do %>
    <i class="material-icons">delete</i>
  <% end %>
  <%= link_to clients_path, class: "btn-floating btn-large waves-effect waves-light teal darken-1" do %>
    <i class="material-icons">arrow_back</i>
  <% end %>
</div>