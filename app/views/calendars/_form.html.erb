
<%= simple_form_for(@calendar) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nome" %>
  </div>

    <div class="form-actions">
       <%= link_to 'Cancelar', :back, :class => 'waves-effect waves-light btn grey darken-1' %>
        <%= button_tag(type: 'submit', class: "btn waves-effect waves-light deep-purple darken-1") do %>
        Salvar <i class="material-icons right">done</i>
      <% end %>
    </div><!-- /.form-actions -->
<% end %>
