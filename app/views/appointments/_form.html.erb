<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.hidden_field :client_id %>
    <%= f.hidden_field :calendar %>
    <%= f.input :name, placeholder: "Texto livre com uma breve descrição", label: "Descritivo rápido" %>
    <%= f.association :services, label: "Serviços/Procedimentos" %>
    <%= f.input :schedule_on, label: "Data", input_html: { class: 'abre-calendario' } %>
    <%= f.input :appointment_time, label: "Horário", input_html: { class: 'abre-calendario-hora' } %>
    <%= f.input :notes, label: 'Anotações' %>
    <%= f.input :finalized, label: 'Atendimento finalizado?' %>    
  </div>

  <div class="painel-vincular">
    <span>Nome Completo: </span><span id="appointment_client_name" class="panel-client"><%= @appointment.client.name if @appointment.client.present? %></span><br>
    <span>CPF: </span><span id="appointment_client_cpf" class="panel-client"><%= @appointment.client.cpf if @appointment.client.present?%></span><br>
    <span>Endereço: </span><span id="appointment_client_endereco" class="panel-client"><%= @appointment.client.address if @appointment.client.present? %></span><br>
    <span>Cidade/UF: </span><span id="appointment_client_cidade" class="panel-client"><%= @appointment.client.city if @appointment.client.present?%> / <%= @appointment.client.province if @appointment.client.present?%></span><br>
    <span>Nascimento: </span><span id="appointment_client_nascimento" class="panel-client"><%= @appointment.client.birth_date.strftime("%d/%m/%Y") if (@appointment.client.present? and @appointment.client.birth_date.present?) %></span><br>
  </div><!-- /painel-vincular -->
    <!-- Modal Trigger -->
<%= link_to 'Vincular ao cadastro de clientes', clients_path, remote: true, class: "waves-effect waves-light btn #{Settings.tema.cor.primaria}" %>

    <div class="form-actions">
       <%= link_to 'Cancelar', :back, :class => 'waves-effect waves-light btn grey darken-1' %>
        <%= button_tag(type: 'submit', class: "btn waves-effect waves-light blue") do %>
        Salvar <i class="material-icons right">done</i>
      <% end %>
    </div><!-- /.form-actions -->
<% end %>



